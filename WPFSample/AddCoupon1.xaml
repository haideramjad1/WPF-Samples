                                    Margin="10,0,10,0"
                                    FontFamily="Tahoma"
                                    VerticalAlignment="Center"
                                    Grid.Column="1" 
                                    Height="39">
                            </DatePicker>
                        </Grid>

                        <Grid Grid.Row="5">
                            <TextBlock Text="CR Limits    :"
                           Style="{StaticResource LeftAlignedTextBlock}" Height="31">
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Row="5"
                      Grid.Column="1">
                            <TextBox x:Name="CreditLimit_TextEdit"
                                 Style="{StaticResource CommonTextBoxStyle}" Margin="10,0,10,0"
                                 TextChanged="ForPlaceHolder_TextChanged">
                            </TextBox>

                            <TextBlock Name="CRLimitTextBlock" 
                               Text=" Credit Limit" 
                               Style="{StaticResource PlaceholderTextBlockStyle}">
                            </TextBlock>
                        </Grid>

                    </Grid>

                    <Grid Grid.Row="2">
                        <TextBlock Text="Where you Heard About us :"
                           FontFamily="Tahoma"
                           FontSize="25" 
                           Padding="10,0,0,0"
                           VerticalAlignment="Center"
                           TextAlignment="Center">
                        </TextBlock>
                    </Grid>

                    <Grid Grid.Row="3">
                        <ComboBox x:Name="HearAboutUs_ComboEdit" 
                              Margin="110,0,110,0" 
                              VerticalAlignment="Center"
                              FontSize="25" 
                              FontFamily="Tahoma"
                              Height="38"
                              SelectionChanged="HearAboutUs_ComboEdit_SelectionChanged">
                            <ComboBox.Template>
                                <ControlTemplate TargetType="ComboBox">
                                    <Grid>
                                        <Border Background="White"
                                            BorderBrush="LightGray"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                            <Grid>
                                                <ContentPresenter x:Name="ContentPresenter"
                                                              ContentTemplate="{TemplateBinding ItemTemplate}"
                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Center"
                                                              Margin="10,0,30,0" />

                                                <ToggleButton x:Name="ToggleButton"
                                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                          Focusable="False"
                                                          ClickMode="Press"
                                                          HorizontalAlignment="Right"
                                                          VerticalAlignment="Center"
                                                          Width="30"
                                                          Height="30"
                                                          Margin="0,0,5,0">
                                                    <ToggleButton.Template>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Grid>
                                                                <Border Background="White"
                                                                    BorderBrush="Gray"
                                                                    BorderThickness="2"
                                                                    CornerRadius="5">
                                                                    <Path x:Name="Arrow"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Data="M0,0 L5,10 L10,0 Z"
                                                                      Fill="Black" />
                                                                </Border>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </ToggleButton.Template>
                                                </ToggleButton>
                                            </Grid>
                                        </Border>

                                        <Popup x:Name="PART_Popup"
                                           Placement="Bottom"
                                           StaysOpen="False"
                                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                           AllowsTransparency="True">
                                            <Border Background="White"
                                                BorderBrush="LightGray"
                                                BorderThickness="1"
                                                CornerRadius="5"
                                                MinWidth="{TemplateBinding ActualWidth}">

                                                <ScrollViewer>
                                                    <ItemsPresenter x:Name="PART_ItemsPresenter" />
                                                </ScrollViewer>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </ControlTemplate>
                            </ComboBox.Template>

                            <ComboBoxItem Content="Friends" />
                            <ComboBoxItem Content="Social Media" />
                            <ComboBoxItem Content="Promotions" />
                        </ComboBox>

                        <TextBlock Name="HearComboBoxTextBlock" 
                               Text=" SelectOption" 
                               Style="{StaticResource PlaceholderTextBlockStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,5">
                        </TextBlock>
                    </Grid>

                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="162*"/>
                            <ColumnDefinition Width="auto" MinWidth="105"/>
                            <ColumnDefinition Width="auto" MinWidth="130"/>
                            <ColumnDefinition Width="105*"/>
                            <ColumnDefinition Width="18*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1">
                            <Button x:Name="Save_Btn" 
                                Content="Add"
                                Style="{StaticResource GreenButtonStyle}"
                                Click="Save_Btn_Click"
                                Margin="3,20,3,22">
                            </Button>
                        </Grid>

                        <Grid Grid.Column="2">
                            <Button x:Name="AddAndGo_Btn" 
                                Content="Add &amp; Go"
                                Style="{StaticResource YellowButtonStyle}"
                                Click="AddAndGo_Btn_Click"
                                Margin="3,20,3,22">
                            </Button>
                        </Grid>

                        <Grid  Grid.Column="3">
                            <Button x:Name="NoBtn" 
                                Content="Close"
                                Style="{StaticResource RedButtonStyle}"
                                Click="Close_Button_Click"
                                Margin="3,20,3,22">
                            </Button>
                        </Grid>

                        <Grid Grid.Column="3">

                        </Grid>

                    </Grid>

                </Grid>

            </Border>
        </Grid>
    </Border>

