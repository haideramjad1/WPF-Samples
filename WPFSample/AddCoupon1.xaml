        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSample"
        mc:Ignorable="d"
        Title="AddCoupon1" Height="600" Width="650"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Border>
        <Grid>
            <Border CornerRadius="10"
            BorderThickness ="10"
            Margin="0,0,0,450">

                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="LightGray" Offset="0"/>
                        <!--<GradientStop Color="#273F6A" Offset="0.5"/>-->
                        <!--<GradientStop Color="#A3DFFF" Offset="1"/>-->
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <!--<GradientStop Color="White" Offset="0"/>-->
                        <GradientStop Color="#003187" Offset="0.5"/>
                        <!--<GradientStop Color="#2E93F3" Offset="1"/>-->
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="250*"/>
                        <ColumnDefinition Width="300*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="155"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="3"
                  Grid.Row="0">
                        <Button x:Name="Close_Button" 
                            Margin="0,3,3,8"
                            Template="{StaticResource ImageButtonTemplate}"
                            Tag="{StaticResource CloseButtonImageBrush}"
                            Click="Close_Button_Click">
                        </Button>
                    </Grid>

                    <Grid Grid.Column="0"
                      Width="35"
                  Grid.Row="0">
                        <Image x:Name="FormPicture" 
                       Source="pack://application:,,,/Resources/customer_icon.png"/>

                    </Grid>

                    <Grid Grid.Column="1"
                  Grid.Row="0">
                        <Border CornerRadius="10">

                            <Border.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Direction="270" Opacity="0.5"/>
                            </Border.Effect>

                            <Grid >
                                <TextBlock x:Name="FormTitle" 
                                       Text="Add Customer"
                                       FontSize="30" 
                                       FontWeight="Medium"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>



            <Border CornerRadius="30"
            Margin="40,80,40,10">

                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="1" />

                </Border.Effect>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="White" Offset="0"/>
                        <!--<GradientStop Color="#1A59C8" Offset="0.5"/>-->
                        <!--<GradientStop Color="#2E93F3" Offset="1"/>-->
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="250*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="60*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30*"/>
                            <ColumnDefinition Width="60*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <TextBlock Text="Name *       :"
                               Style="{StaticResource LeftAlignedTextBlock}" Height="31">
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Row="0"
                      Grid.Column="1" >
                            <TextBox x:Name="Name_TextEdit"
                                 Style="{StaticResource CommonTextBoxStyle}" Margin="10,0,10,0"
                                 TextChanged="ForPlaceHolder_TextChanged">
                            </TextBox>

                            <TextBlock Name="NameTextBlock" 
                               Text=" Customer Name" 
                               Style="{StaticResource PlaceholderTextBlockStyle}">
                            </TextBlock>

                            <!--<TextBlock Name="ContactNameError_Label" 
                                   Text="Contact Name not Provided!!!"
                                   Style="{StaticResource ErrorLabelStyle}">
                        </TextBlock>-->
                        </Grid>

                        <Grid Grid.Row="1">
                            <TextBlock Text="Mobile No * :"
                           Style="{StaticResource LeftAlignedTextBlock}" Height="31">
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Row="1"
                      Grid.Column="1">
                            <TextBox x:Name="MobileNo_TextEdit"
                                 Style="{StaticResource CommonTextBoxStyle}" Margin="10,0,10,0"
                                 TextChanged="ForPlaceHolder_TextChanged">
                            </TextBox>

                            <TextBlock Name="MobileTextBlock" 
                               Text=" Mobile No" 
                               Style="{StaticResource PlaceholderTextBlockStyle}">
                            </TextBlock>

                            <!--<TextBlock Name="MobileNumber_ErrorLabel" 
                                   Text="Mobile Number not Provided!!!"
                                   Style="{StaticResource ErrorLabelStyle}">
                        </TextBlock>-->
                        </Grid>

                        <Grid Grid.Row="2">
                            <TextBlock Text="Email          :"
                           Style="{StaticResource LeftAlignedTextBlock}" Height="31">
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Row="2"
                      Grid.Column="1" >
                            <TextBox x:Name="Email_TextEdit"
                                 Style="{StaticResource CommonTextBoxStyle}" Margin="10,0,10,0"
                                 TextChanged="ForPlaceHolder_TextChanged">
                            </TextBox>

                            <TextBlock Name="EmailTextBlock" 
                               Text=" Email" 
                               Style="{StaticResource PlaceholderTextBlockStyle}">
                            </TextBlock>
                        </Grid>

                        <Grid Grid.Row="3">
                            <TextBlock Text="Zip             :"
                           Style="{StaticResource LeftAlignedTextBlock}" Height="31">
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Row="3"
                      Grid.Column="1">
                            <TextBox x:Name="Zip_TextEdit"
                                 Style="{StaticResource CommonTextBoxStyle}" Margin="10,0,10,0"
                                 TextChanged="ForPlaceHolder_TextChanged">
                            </TextBox>

                            <TextBlock Name="ZipTextBlock" 
                               Text=" Zip Code" 
                               Style="{StaticResource PlaceholderTextBlockStyle}">
                            </TextBlock>
                        </Grid>

                        <Grid Grid.Row="4">
                            <TextBlock Text="DOB           :"
                           Style="{StaticResource LeftAlignedTextBlock}" Height="31">
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Row="4"
                      Grid.Column="1">
