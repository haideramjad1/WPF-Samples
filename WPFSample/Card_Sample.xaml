<Window x:Class="WPFSample.Card_Sample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSample"
        mc:Ignorable="d"
        Title="Card_Sample" Height="800" Width="800">
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="171*" />
            <RowDefinition Height="167*" />
            <RowDefinition Height="446*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <Button x:Name="butn1"
                    Grid.Column="0"
                    Template="{StaticResource ImageButtonTemplate}"
                    Tag="{StaticResource CloseButtonImageBrush}"/>

            <Grid Grid.Column="1">
                <Button x:Name="butn2"
                        Content="Add new line"
            Style="{StaticResource KeyboardButtonStyle}" Click="butn2_Click"/>
            </Grid>
            <Grid Grid.Column="2"/>

            <DataGrid Grid.Column="2" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </Grid>

        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,27,0,0" Grid.Row="1"/>

        <Grid Grid.Row="2" Margin="10">

            <ScrollViewer x:Name="ScrollViewer" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly"
                          PreviewMouseDown="ScrollViewer_PreviewMouseDown"
                          PreviewMouseMove="ScrollViewer_PreviewMouseMove"
                          PreviewMouseUp="ScrollViewer_PreviewMouseUp">

                <!-- DataGrid -->
                <DataGrid Name="dataGrid" 
                          AutoGenerateColumns="False" 
                          ItemsSource="{Binding Items}" 
                          CanUserAddRows="False" 
                          HeadersVisibility="Column"
                          CanUserResizeColumns="False"
                          CanUserReorderColumns="False"
                          IsHitTestVisible="True" 
                          SelectionMode="Single"
                          IsTabStop="False"
                          SelectionChanged="dataGrid_SelectionChanged">
                    <DataGrid.Columns>

                        <!-- Name Column -->
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150*"/>

                        <!-- Subtract Button -->
                        <DataGridTemplateColumn Header="Sub" Width="50*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="-" Click="SubButton_Click" Width="30"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Quantity Column -->
                        <DataGridTextColumn Header="QTY" Binding="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80*"/>

                        <!-- Add Button -->
                        <DataGridTemplateColumn Header="Add" Width="50*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="+" Click="AddButton_Click" Width="30"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Unit Price Column -->
                        <DataGridTextColumn Header="UPR" Binding="{Binding UnitPrice}" Width="60*"/>

                        <!-- Subtotal Column -->
                        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="100*" IsReadOnly="True"/>

                        <!-- ENTN Button -->
                        <DataGridTemplateColumn Header="ENTN" Width="60*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="ENTN" Click="EntnButton_Click" Width="60"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Delete Button -->
                        <DataGridTemplateColumn Header="DEL" Width="50*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="X" Click="DeleteButton_Click" Background="Red" Foreground="White" Width="30"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

            </ScrollViewer>

        </Grid>


    </Grid>
</Window>
